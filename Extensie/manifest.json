{
    "manifest_version": 3,
    "name": "Password Manager Extension",
    "description": "A password manager extension for secure login and password management.",
    "version": "1.0",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {}
    },
    "icons": {}
}